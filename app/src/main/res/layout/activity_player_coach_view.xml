<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerDisplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PlayerCoachView">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/listViewPlayerCoach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428">

        <EditText
            android:id="@+id/esearch"
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:text=""
            android:hint="Search here"
            android:outlineSpotShadowColor="@color/teal_200"
            android:inputType="textPersonName"
            android:textColorHint="#615858"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btngo"
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_search_24"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewPlayerCoach"
        android:layout_width="match_parent"
        android:layout_height="696dp"
        android:layout_margin="20dp"
        android:background="@color/black"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>

</android.support.constraint.ConstraintLayout>
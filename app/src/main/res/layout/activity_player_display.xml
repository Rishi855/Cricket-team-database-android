<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".players.PlayerDisplay"
    android:background="@drawable/playerlistbackgroud">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="178dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageButton3"
            android:layout_width="411dp"
            android:layout_height="178dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/player_avatar"/>

        <LinearLayout
            android:layout_width="451dp"
            android:layout_height="164dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/testPlayerID"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/titleofattribute"
                android:padding="5dp"
                android:text="testPlayerID"
                android:textColor="#001A60" />

            <TextView
                android:id="@+id/textTeamID"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/titleofattribute"
                android:padding="5dp"
                android:text="textTeamID"
                android:textColor="#001A60" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="383dp"
        android:layout_height="497dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--add text and textview to editview-->

            <TextView
                android:id="@+id/Identity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/titleofattribute"
                android:padding="5dp"
                android:text="Identity :"
                android:textColor="#001A60"
                android:textColorHint="#01040C"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jerseyNo"
                    android:layout_width="188dp"
                    android:layout_height="39dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="Jersey no"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/textJerseyNo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/attributes"
                    android:enabled="false"
                    android:padding="3dp"
                    android:text="textJerseyNo"
                    android:textColor="#2C2F30"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/playername"
                    android:layout_width="188dp"
                    android:layout_height="39dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="Player name"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textPlayerName"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:textColor="#2C2F30"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="textPlayerName"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/specification"
                    android:layout_width="188dp"
                    android:layout_height="39dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="Specification"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textSpecification"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:textColor="#2C2F30"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="textSpecification"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/Status"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/titleofattribute"
                android:padding="5dp"
                android:text="Status :"
                android:textColor="#001A60"
                android:textColorHint="#01040C"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/matches"
                    android:layout_width="188dp"
                    android:layout_height="39dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="Matches"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textMatches"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:textColor="#2C2F30"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/attributes"
                    android:padding="5dp"
                    android:text="textMatches"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/runs"
                    android:layout_width="188dp"
                    android:layout_height="39dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="Runs"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textRuns"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:textColor="#2C2F30"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="textRuns"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wickets"
                    android:layout_width="188dp"
                    android:layout_height="38sp"
                    android:layout_margin="1dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="Wickets"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textWickets"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:textColor="#2C2F30"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="textWickets"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/catches"
                    android:layout_width="188dp"
                    android:layout_height="38sp"
                    android:layout_margin="1dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="Catches"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textCatches"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:textColor="#2C2F30"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="textCatches"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/fitness"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/titleofattribute"
                android:padding="5dp"
                android:text="Fitness :"
                android:textColor="#001A60"
                android:textColorHint="#01040C"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/height"
                    android:layout_width="188dp"
                    android:layout_height="39dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="Height"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textHeight"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:textColor="#2C2F30"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="textHeight"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="188dp"
                    android:layout_height="39dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="Weight"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textWeight"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:textColor="#2C2F30"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/attributes"
                    android:padding="3dp"
                    android:text="textWeight"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fabMenu"
        android:layout_width="136dp"
        android:layout_height="238dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="15dp"
        app:fab_addButtonColorNormal="@color/pink"
        app:fab_addButtonColorPressed="@color/pink_pressed"
        app:fab_addButtonPlusIconColor="@color/white"
        app:fab_labelStyle="@style/customFab"
        app:layout_anchorGravity="bottom|right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/white_pressed"
            app:fab_icon="@drawable/ic_baseline_edit_24"
            app:fab_size="mini"
            app:fab_title="Update" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/white_pressed"
            app:fab_icon="@drawable/ic_baseline_save_24"
            app:fab_size="mini"
            app:fab_title="Save" />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</android.support.constraint.ConstraintLayout>

